{
  // Workspace UI color changing.
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#5c4ac4",
    "activityBarBadge.background": "#5c4ac4"
  },
  // Drupal recommend editor settings. See https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-editor-settings
  "breadcrumbs.enabled": true,
  "css.validate": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "off",
  "editor.detectIndentation": true,
  "editor.rulers": [
    80
  ],
  "files.associations": {
    "*.inc": "php",
    "*.module": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.profile": "php",
    "*.tpl.php": "php",
    "*.test": "php",
    "*.php": "php",
    "*.info": "ini"
  },
  "files.trimTrailingWhitespace": true,
  "files.restoreUndoStack": false,
  "files.insertFinalNewline": true,
  "html.format.enable": true,
  "html.format.wrapLineLength": 80,
  // PHP CodeSniffer. see https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-drupal-code-standards-configuration
  "phpcs.enable": true,
  "phpcs.standard": "Drupal,DrupalPractice",
  "phpcs.lintOnType": false,
  "phpcs.executablePath": "/Users/hikarumaruyama/.composer/vendor/bin/phpcs",
  // PHP Code Beautifier and Fixer
  "phpcbf.standard": "Drupal,DrupalPractice",
  "phpcbf.executablePath": "/Users/hikarumaruyama/.composer/vendor/bin/phpcbf",
  "[php]": {
    "editor.defaultFormatter": "persoderlind.vscode-phpcbf"
  },
  // PHP DocBlocker. see https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-php-docblocks
  "php-docblocker.useShortNames": true,
  // Composer. see https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-composer-drupal-8
  "composer.executablePath": "/usr/local/bin/composer",
  // PHP Intelephense. see https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-php-intellisense
  "intelephense.diagnostics.run": "onSave",
  "php.suggest.basic": false,
  "php.validate.enable": false
}
